{% extends 'base.html.twig' %}

{% block title %}Solicitud{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('registro_index') }}">Solicitudes</a></li>
                <li class="breadcrumb-item active" aria-current="page"> {{  registro.slug }} </li>
            </ol>
        </nav>

        <div class="card border-dark mt-5" style="max-width: 100%">
            <div class="card-header">{{ registro.unidad }}</div>
            <div class="card-body text-dark">
                <h5 class="card-title">{{ registro.nombre }} {{ registro.paterno }} {{ registro.materno }}</h5>
                <p class="card-text">
                <address>
                    <strong> {{ registro.email }} </strong> <br>
                    {{ registro.direccion }}
                </address>
                </p>
                <ul class="list-group list-group-horizontal">

                    <li class="list-group-item"><i class="fas fa-file-pdf"></i>
                        <a href="{{ vich_uploader_asset(registro, 'solicitudFile') }}"  target="_blank">Carta solicitud</a>
                    </li>
                    <li class="list-group-item"><i class="fas fa-file-pdf"></i>
                        <a href="{{ vich_uploader_asset(registro, 'cvFile') }}"  target="_blank">Currículum</a>
                    </li>
                    <li class="list-group-item"><i class="fas fa-file-pdf"></i>
                        <a href="{{ vich_uploader_asset(registro, 'comprobanteFile') }}"  target="_blank">Currículum</a>
                    </li>
                    <li class="list-group-item"><i class="fas fa-file-pdf"></i>
                        <a href="{{ vich_uploader_asset(registro, 'ref1recomFile') }}"  target="_blank">Recomendación 1</a>
                    </li>
                    <li class="list-group-item"><i class="fas fa-file-pdf"></i>
                        <a href="{{ vich_uploader_asset(registro, 'ref2recomFile') }}"  target="_blank">Recomendación 2</a>
                    </li>
                </ul>
            </div>
        </div>


        <a href="{{ path('registro_edit', {'slug': registro.slug}) }}">edit</a>

        {{ include('registro/_delete_form.html.twig') }}
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-action="modal-form#openModal"
                 data-bs-toggle="modal" data-bs-target="#exampleModal">
            Launch demo modal
        </button>

        <div class="container-fluid mt-4">
            <div class="d-flex flex-row">
                <div {{ stimulus_controller('modal-form', {
                    formUrl: path('registro_show',{ 'slug':registro.slug})
                }) }}>
                    {{ include('registro/_modal.html.twig', {
                        modalTitle: 'Modificar solicitud',
                    }) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
